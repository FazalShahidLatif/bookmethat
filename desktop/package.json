{
  "name": "bookmethat-desktop",
  "version": "1.0.0",
  "description": "BookMeThat Desktop Application",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "tsc -p electron/tsconfig.json && electron .",
    "build": "next build && tsc -p electron/tsconfig.json",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "start": "electron ."
  },
  "build": {
    "appId": "com.bookmethat.desktop",
    "productName": "BookMeThat",
    "files": [
      "dist-electron/**/*",
      ".next/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": ["nsis"],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "public/icon.icns",
      "category": "public.app-category.travel"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "public/icon.png",
      "category": "Travel"
    }
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "electron-store": "^8.2.0",
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "concurrently": "^8.2.2",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.3"
  }
}
