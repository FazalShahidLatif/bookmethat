# ============================================
# bookmethat Backend Environment Variables
# ============================================
# üìã SETUP INSTRUCTIONS:
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in actual values (never commit .env!)
# 3. For MVP: Most APIs use mock data until we get approval
# 4. Mark "REQUIRED NOW" vs "REQUIRED LATER" below

# ============================================
# DATABASE - REQUIRED NOW
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/bookmethat_dev
REDIS_URL=redis://localhost:6379

# ============================================
# AUTHENTICATION - REQUIRED NOW
# ============================================
# Generate strong random strings for production
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_change_this
BCRYPT_ROUNDS=10

# ============================================
# STRIPE PAYMENTS - REQUIRED LATER (Using Mocks Now)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
# Status: ‚ùå Not obtained yet - Using mock payments
# Apply when: Site is live with SSL
STRIPE_SECRET_KEY=sk_test_MOCK_KEY_REPLACE_WHEN_APPROVED
STRIPE_PUBLIC_KEY=pk_test_MOCK_KEY_REPLACE_WHEN_APPROVED
STRIPE_WEBHOOK_SECRET=whsec_MOCK_SECRET_REPLACE_WHEN_APPROVED

# ============================================
# AIRALO ESIM API - REQUIRED LATER (Using Mocks Now)
# ============================================
# Get from: https://www.airalo.com/partners
# Status: ‚ùå Not obtained yet - Using mock eSIM data
# Apply when: Site is live, business verified
AIRALO_CLIENT_ID=MOCK_CLIENT_ID
AIRALO_CLIENT_SECRET=MOCK_CLIENT_SECRET
AIRALO_API_URL=https://sandbox-partners-api.airalo.com

# ============================================
# EMAIL SERVICE - CAN GET NOW (Optional)
# ============================================
# Get from: https://app.sendgrid.com/settings/api_keys
# Status: ‚ö†Ô∏è Can obtain anytime (free tier available)
SENDGRID_API_KEY=SG.OPTIONAL_KEY_HERE
SENDGRID_FROM_EMAIL=noreply@bookmethat.com
SENDGRID_FROM_NAME=bookmethat

# Alternative: Use console logging for dev
EMAIL_PROVIDER=console

# ============================================
# TWILIO SMS/VOICE - OPTIONAL FOR MVP
# ============================================
# Get from: https://console.twilio.com/
# Status: ‚ö†Ô∏è Optional - can skip for MVP
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=OPTIONAL_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# STORAGE - OPTIONAL FOR MVP
# ============================================
# For file uploads (use external URLs initially)
AWS_ACCESS_KEY_ID=OPTIONAL_AWS_KEY
AWS_SECRET_ACCESS_KEY=OPTIONAL_AWS_SECRET
AWS_REGION=us-east-1
S3_BUCKET_NAME=bookmethat-uploads

# ============================================
# GOOGLE SERVICES - OPTIONAL
# ============================================
GOOGLE_MAPS_API_KEY=OPTIONAL_MAPS_KEY
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ============================================
# EXTERNAL BOOKING APIs - REQUIRED LATER
# ============================================
# These require live website proof
# Status: ‚ùå Using mock data until approved

# Amadeus (Hotels/Flights)
AMADEUS_API_KEY=MOCK_AMADEUS_KEY
AMADEUS_API_SECRET=MOCK_AMADEUS_SECRET

# Booking.com Affiliate
BOOKING_COM_API_KEY=MOCK_BOOKING_KEY

# Skyscanner
SKYSCANNER_API_KEY=MOCK_SKYSCANNER_KEY

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
API_BASE_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://bookmethat.netlify.app

# ============================================
# LOGGING & MONITORING - OPTIONAL
# ============================================
SENTRY_DSN=OPTIONAL_SENTRY_DSN
LOG_LEVEL=debug

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# PAKISTAN RAILWAY API - REQUIRED LATER
# ============================================
# Get from: https://www.pakrail.gov.pk/api-docs
# Status: ‚ùå Not obtained yet - Using mock train data
PR_API_KEY=MOCK_PR_API_KEY
PR_API_SECRET=MOCK_PR_API_SECRET
USE_MOCK_TRAINS=true

# ============================================
# JAZZCASH PAYMENT GATEWAY - REQUIRED LATER
# ============================================
# Get from: https://sandbox.jazzcash.com.pk
# Status: ‚ùå Not obtained yet - Using mock payments
JAZZCASH_MERCHANT_ID=MOCK_MERCHANT_ID
JAZZCASH_PASSWORD=MOCK_PASSWORD
JAZZCASH_INTEGRITY_SALT=MOCK_INTEGRITY_SALT
JAZZCASH_RETURN_URL=http://localhost:3000/payment/jazzcash/callback
USE_MOCK_JAZZCASH=true

# ============================================
# INTERNAL API SECURITY - REQUIRED NOW
# ============================================
# Generate a secure random key (min 32 characters)
# This protects internal payment endpoints from unauthorized access
INTERNAL_API_KEY=change-this-to-a-secure-random-key-in-production

